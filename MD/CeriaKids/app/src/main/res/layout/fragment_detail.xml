<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailFragment">


    <ImageView
        android:id="@+id/Ivdetailgizi"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/Tvdetail_gizi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_gizi"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="200dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Ivdetailgizi" />

    <TextView
        android:id="@+id/detail_desc_gizi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="56dp"
        android:text="@string/desc_gizi"
        app:layout_constraintEnd_toEndOf="@+id/Tvdetail_gizi"
        app:layout_constraintStart_toStartOf="@+id/Tvdetail_gizi"
        app:layout_constraintTop_toBottomOf="@+id/Tvdetail_gizi" />
</androidx.constraintlayout.widget.ConstraintLayout>